<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:elevation="8dp"
    android:background="@color/white">

    <!-- Banner (image + tên thương hiệu) -->
    <FrameLayout
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
           android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_perfume" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:background="#80FFFFFF"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="AFFINITY"
                android:textColor="@android:color/black"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/affinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66%"
                android:fontFamily="@font/opn"
                android:textSize="40sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner">

        <!-- Card sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lancome_idole" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opn"
                    android:text="Lancome_idole"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura"
                    android:text="Lancome"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/concentration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="#eeeeee"
                    android:fontFamily="@font/futura"
                    android:padding="4dp"
                    android:text="EAU DE PARFUM"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Nút -->
        <Button
            android:id="@+id/btAddCart"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/button_square"
            android:fontFamily="@font/futura"
            android:text="GET SAMPLE"
            android:textColor="@android:color/white"
            app:backgroundTint="#000000" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
