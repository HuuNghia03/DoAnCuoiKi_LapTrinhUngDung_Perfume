    <solid android:color="@android:color/transparent"/> <!-- nền trong suốt -->

    <size android:height="1dp"/> <!-- để định hình dạng nếu cần -->

    <padding android:bottom="1dp" />

    <stroke android:width="0dp" android:color="@android:color/transparent"/> <!-- bỏ viền xung quanh -->

